<h1>Novo perfil</h1>
<%= form_with scope: :perfil, url: new_perfil_path, local: true do |form| %>
  <p>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </p>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :telefone %><br>
    <%= form.text_field :telefone %>
  </p>

  <p>
    <%= form.label :senha %><br>
    <%= form.text_field :senha %>
  </p>

  <p>
    <%= form.submit 'Salvar' %>
  </p>
<% end %>