<h1>Login</h1>
<% flash.each do |name, msg| %>
    <%= content_tag :div,msg,:id=>"flash#{name}"%>
<%end%>
<%=yield%>
<%= form_with scope: :perfil, url: "/login", method: :post, local: true do |form| %>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :senha %><br>
    <%= form.text_field :senha %>
  </p>

  <p>
    <%= form.submit 'Entrar' %>
  </p>
<% end %>