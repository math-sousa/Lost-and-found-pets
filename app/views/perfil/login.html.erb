<h1>Login</h1>
<%= form_with scope: :perfil, url: "/perfil", method: :post, local: true do |form| %>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :senha %><br>
    <%= form.text_field :senha %>
  </p>

  <p>
    <%= form.submit 'Entrar' %>
  </p>
<% end %>