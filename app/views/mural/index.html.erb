<div>
    <% if perfil_signed_in? %>
      <%= link_to 'Meu Perfil', edit_perfil_registration_path, :class => 'navbar-link' %> 
      <%= link_to "Novo Post", new_post_path, :class => 'navbar-link'  %>
    <% end %>
</div>

<h1>Mural</h1>

<!-- Caso nao exista posts -->
<% if !@posts.any? %>
    <p>
        Nenhum post cadastrado por enquanto.
    </p>
<% end %>

<!-- #Caso exista post-->
<div id="posts">
    <% if request.url.include? 'encontrado' %>
        <% if request.url.include? 'false' %>
            <%= link_to 'Mostrar apenas pets já encontrados', mural_index_path(:encontrado=>true), :class => 'navbar-link' %> 
        <%else%>
            <%= link_to 'Mostrar todos os pets', mural_index_path(:encontrado=>false), :class => 'navbar-link' %> 
        <%end%>    
    <%else%>
        <p>asfsadfasdfasdg</p>
        <%= link_to 'Mostrar apenas pets já encontrados', mural_index_path(:encontrado=>true), :class => 'navbar-link' %> 
    <%end%>

    <%@posts.each do |post|%>
        <%= render 'posts/post', post: post %>
    <%end%>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "erro") %> impedem que o comentario seja gravado no banco de dados:</h2>
        
            <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
</div>